#include <iostream>
using namespace std;

int main()
{
    int array[100], size;
    int x, z, temp;

    cout << "Enter the size of the array: ";
    cin >> size;

    for (int i = 0; i < size; ++i) {
        cout << "Array element " << i + 1 << ": ";
        cin >> array[i];
    }

    for (int i = 0; i < size - 1; i++){
        x = array[i];
        z = i;

        for(int j = i + 1; j < size; j++)
        {
            if (x > array[j])
            {
                x = array[j];
                z = j;
            }
        }

        temp = array[i];
        array[i] = array[z];
        array[z] = temp;
    }

    cout << "The sorted array is: ";
    for (int i = 0; i < size; i++)
    {
        cout << array[i];
        if (i < size - 1)
        {
            cout << " ";
        }   
    }
    return 0;
}
